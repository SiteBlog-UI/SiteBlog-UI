{
  "compilerOptions": {
    // --- Entorno de Ejecuci贸n (Frontend) ---
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "jsx": "preserve",
    // --- Sistema de M贸dulos ---
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // --- Calidad y Rigor del C贸digo ---
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    // --- Integraci贸n con Bundlers (Parcel) ---
    "noEmit": true,
    // --- Rutas (Opcional pero recomendado) ---
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "assets/index-copy.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}